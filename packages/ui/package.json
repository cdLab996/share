{
  "name": "@ttpos/share-ui",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "description": "ttpos ui",
  "license": "MIT",
  "homepage": "https://github.com/nsiod/share.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/nsiod/share.git",
    "directory": "packages/ui"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./css": "./src/globals.css",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "dist/**/*.css"
  ],
  "scripts": {
    "dev:tsup": "tsup src/index.ts --format esm,cjs --dts --external react,chrome --watch",
    "build:tsup": "tsup src/index.ts --format esm,cjs --dts --external react,chrome --watch",
    "dev": "tsc -w",
    "build": "tsc",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.11",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-popover": "^1.1.11",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.6",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slider": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.503.0",
    "ogl": "^1.0.11",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@ttpos/share-tsconfig": "workspace:*",
    "tailwindcss": "^4",
    "tsup": "8.5.0",
    "tw-animate-css": "^1.2.8"
  }
}
